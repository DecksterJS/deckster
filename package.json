{
  "name": "deckster",
  "version": "0.5.1",
  "description": "An open-source JavaScript library for creating card games.",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "license": "MIT",
  "main": "lib/deckster.js",
  "directories": {
    "lib": "./lib",
    "example": "./example"
  },
  "dependencies": {
    "isaac": "0.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "coveralls": "^2.11.6",
    "esdoc": "^0.4.3",
    "eslint": "^1.10.3",
    "exorcist": "^0.4.0",
    "rimraf": "^2.4.4",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2"
  },
  "scripts": {
    "start": "cd example && node server.js",
    "compile": "rimraf lib && mkdir lib && babel -d ./lib ./src",
    "test": "npm run compile && cd tests && babel ./**/*.js | node --coverage | tap-spec",
    "build-docs": "rimraf docs && mkdir docs && esdoc -c ./esdoc.json",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DecksterJS/deckster.git"
  },
  "bugs": {
    "url": "https://github.com/DecksterJS/deckster/issues"
  }
}
