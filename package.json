{
  "name": "deckster",
  "version": "0.4.0",
  "description": "An open-source JavaScript library for creating card games.",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "license": "MIT",
  "main": "lib/deckster.js",
  "directories": {
    "lib": "./lib",
    "example": "./example"
  },
  "dependencies": {
    "isaac": "0.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-tape-runner": "^1.3.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "esdoc": "^0.4.3",
    "eslint": "^1.10.3",
    "exorcist": "^0.4.0",
    "rimraf": "^2.4.4",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "start": "cd example && node server.js",
    "compile": "rimraf lib && mkdir lib && cd lib && browserify ./../src -t babelify -d | exorcist deckster.js.map > deckster.js && uglifyjs deckster.js -o deckster.min.js --in-source-map deckster.js.map --source-map deckster.js.min.map",
    "build-docs": "rimraf esdoc && mkdir esdoc && esdoc -c ./esdoc.json",
    "test": "babel-tape-runner ./tests/**/*.js | tap-spec",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DecksterJS/deckster.git"
  },
  "bugs": {
    "url": "https://github.com/DecksterJS/deckster/issues"
  }
}
